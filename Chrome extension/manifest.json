{
  "manifest_version": 3,
  "name": "Task Tracker",
  "version": "1.1",
  "description": "Daily task checklist with password protection.",
  "permissions": ["storage"],
  "action": {
    "default_icon": {
      "16": "icons/favicon-16x16.png",
      "48": "icons/favicon-32x32.png",
      "128": "icons/android-chrome-192x192.png"
    }
  },
  "chrome_url_overrides": {
    "newtab": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/favicon-16x16.png",
    "48": "icons/favicon-32x32.png",
    "128": "icons/android-chrome-192x192.png"
  }
}